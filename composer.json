{
    "name": "claroline/plugin-installer",
    "type": "composer-installer",
    "require": {
        "claroline/bundle-recorder": "~1.1",
        "claroline/installation-bundle": "~2.0",
        "claroline/core-bundle": "~2.0"
    },
    "require-dev": {
        "composer/composer": "dev-master",
        "mockery/mockery": "dev-master@dev"
    },
    "autoload": {
        "psr-0": { "Claroline\\PluginInstaller": "" }
    },
    "target-dir": "Claroline/PluginInstaller",
    "extra": {
        "class": "Claroline\\PluginInstaller\\Installer"
    }
}

